delegarPropietario(nombrePartida: string, nuevoPropietario: string) {
  const usuarios = this.cargarDesdeLocalStorage();
  const actualizados = usuarios.map((u) => {
    if (u.partida === nombrePartida) {
      if (u.rol === 'propietario') return { ...u, rol: 'jugador' };
      if (u.nombre === nuevoPropietario) return { ...u, rol: 'propietario' };
    }
    return u;
  });
  localStorage.setItem(CLAVE_LOCAL_STORAGE, JSON.stringify(actualizados));
  this.usuariosSubject.next(actualizados);
}
